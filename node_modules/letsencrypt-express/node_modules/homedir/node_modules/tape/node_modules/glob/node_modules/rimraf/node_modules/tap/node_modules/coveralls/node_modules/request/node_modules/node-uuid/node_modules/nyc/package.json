{
  "name": "nyc",
  "version": "2.4.0",
  "description": "a code coverage tool that works well with subprocesses.",
  "main": "index.js",
  "scripts": {
    "test": "standard && tap --coverage ./test/nyc-test.js"
  },
  "bin": {
    "nyc": "./bin/nyc.js"
  },
  "config": {
    "nyc": {
      "exclude": [
        "node_modules/"
      ]
    }
  },
  "keywords": [
    "coverage",
    "subprocess",
    "testing",
    "reporter"
  ],
  "contributors": [
    {
      "name": "Isaac Schlueter",
      "website": "https://github.com/isaacs"
    },
    {
      "name": "Ollie Buck",
      "website": "https://github.com/shackpank"
    }
  ],
  "author": "Ben Coe <ben@npmjs.com>",
  "license": "ISC",
  "dependencies": {
    "foreground-child": "^1.2.0",
    "istanbul": "^0.3.16",
    "lodash": "^3.8.0",
    "mkdirp": "^0.5.0",
    "rimraf": "^2.4.0",
    "signal-exit": "^2.1.1",
    "spawn-wrap": "^1.0.1",
    "strip-bom": "^1.0.0",
    "yargs": "^3.12.0"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "sinon": "^1.15.3",
    "standard": "^4.3.2",
    "tap": "^1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bcoe/nyc.git"
  }
}
